<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ani="using:CommunityToolkit.WinUI.Animations">

    <!-- ??????????????????????????????????????????????????????????? -->
    <!-- ?? PAGE ENTRANCE ANIMATIONS -->
    <!-- ??????????????????????????????????????????????????????????? -->

    <!-- Fade In Animation -->
    <Storyboard x:Key="FadeInStoryboard">
        <DoubleAnimation 
            Storyboard.TargetProperty="(UIElement.Opacity)"
            From="0" To="1"
            Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Slide In From Left -->
    <Storyboard x:Key="SlideInLeftStoryboard">
        <DoubleAnimation 
            Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)"
            From="-50" To="0"
            Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation 
            Storyboard.TargetProperty="(UIElement.Opacity)"
            From="0" To="1"
            Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Slide In From Right -->
    <Storyboard x:Key="SlideInRightStoryboard">
        <DoubleAnimation 
            Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)"
            From="50" To="0"
            Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation 
            Storyboard.TargetProperty="(UIElement.Opacity)"
            From="0" To="1"
            Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Slide In From Top -->
    <Storyboard x:Key="SlideInTopStoryboard">
        <DoubleAnimation 
            Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
            From="-50" To="0"
            Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation 
            Storyboard.TargetProperty="(UIElement.Opacity)"
            From="0" To="1"
            Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Scale In (Zoom In) -->
    <Storyboard x:Key="ScaleInStoryboard">
        <DoubleAnimation 
            Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)"
            From="0.8" To="1"
            Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <ElasticEase EasingMode="EaseOut" Oscillations="1"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation 
            Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)"
            From="0.8" To="1"
            Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <ElasticEase EasingMode="EaseOut" Oscillations="1"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation 
            Storyboard.TargetProperty="(UIElement.Opacity)"
            From="0" To="1"
            Duration="0:0:0.5">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- ??????????????????????????????????????????????????????????? -->
    <!-- ?? INTERACTIVE ANIMATIONS -->
    <!-- ??????????????????????????????????????????????????????????? -->

    <!-- Pulse/Breathing Animation -->
    <Storyboard x:Key="PulseStoryboard" RepeatBehavior="Forever">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)">
            <LinearDoubleKeyFrame KeyTime="00:00:00" Value="0.6"/>
            <LinearDoubleKeyFrame KeyTime="00:00:01" Value="1.0"/>
            <LinearDoubleKeyFrame KeyTime="00:00:02" Value="0.6"/>
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <!-- Loading Spinner (Continuous Rotation) -->
    <Storyboard x:Key="LoadingSpinnerStoryboard" RepeatBehavior="Forever">
        <DoubleAnimation 
            Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)"
            From="0" To="360"
            Duration="0:0:2">
            <DoubleAnimation.EasingFunction>
                <LinearEase/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- Bounce Animation -->
    <Storyboard x:Key="BounceStoryboard">
        <DoubleAnimation 
            Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
            From="0" To="20"
            Duration="0:0:0.6">
            <DoubleAnimation.EasingFunction>
                <BounceEase EasingMode="EaseOut" Bounces="3"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- ??????????????????????????????????????????????????????????? -->
    <!-- ?? BUTTON STYLES WITH ANIMATIONS -->
    <!-- ??????????????????????????????????????????????????????????? -->

    <!-- Animated Primary Button -->
    <Style x:Key="AnimatedPrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentColor}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <CompositeTransform/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Animated Card Style -->
    <Style x:Key="AnimatedCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource LayerFillColorDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="RenderTransform">
            <Setter.Value>
                <CompositeTransform/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ??????????????????????????????????????????????????????????? -->
    <!-- ?? VISUAL STATE ANIMATIONS -->
    <!-- ??????????????????????????????????????????????????????????? -->

    <!-- Success Animation (Green Glow) -->
    <Storyboard x:Key="SuccessAnimationStoryboard">
        <ColorAnimation 
            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
            From="#FF3B30" To="#34C759"
            Duration="0:0:0.5">
            <ColorAnimation.EasingFunction>
                <CubicEase EasingMode="EaseInOut"/>
            </ColorAnimation.EasingFunction>
        </ColorAnimation>
    </Storyboard>

    <!-- Error Animation (Red Shake) -->
    <Storyboard x:Key="ErrorAnimationStoryboard">
        <DoubleAnimation 
            Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateX)"
            From="-5" To="5"
            Duration="0:0:0.1"
            RepeatBehavior="5x"
            AutoReverse="True">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- ??????????????????????????????????????????????????????????? -->
    <!-- ?? SPECIAL EFFECTS -->
    <!-- ??????????????????????????????????????????????????????????? -->

    <!-- Glow Effect (Shadow Animation) -->
    <Storyboard x:Key="GlowEffectStoryboard" RepeatBehavior="Forever" AutoReverse="True">
        <DoubleAnimation 
            Storyboard.TargetProperty="(ThemeShadow.BlurRadius)"
            From="4" To="16"
            Duration="0:0:1">
            <DoubleAnimation.EasingFunction>
                <SineEase EasingMode="EaseInOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

</ResourceDictionary>
