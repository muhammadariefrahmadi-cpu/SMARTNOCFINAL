<Page
    x:Class="SMART_NOC.Views.HistoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls" 
    xmlns:ui="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:primitives="using:CommunityToolkit.WinUI.UI.Controls.Primitives"
    xmlns:local="using:SMART_NOC.Views"
    mc:Ignorable="d"
    RequestedTheme="Dark">

    <Page.Resources>
        <ThemeShadow x:Name="SharedShadow" />
        <local:StatusColorConverter x:Key="StatusColorConverter"/>

        <!-- 🔥 MODERN STAT CARD STYLE 🔥 -->
        <Style x:Key="ModernStatCard" TargetType="Border">
            <Setter Property="Background" Value="#0D1B2A"/>
            <Setter Property="BorderBrush" Value="#1E3A52"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="Shadow" Value="{StaticResource SharedShadow}"/>
        </Style>

        <!-- 🔥 GLASS CARD - ENHANCED 🔥 -->
        <Style x:Key="GlassCard" TargetType="Border">
            <Setter Property="Background" Value="#0D1B2A"/>
            <Setter Property="BorderBrush" Value="#1E3A52"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Shadow" Value="{StaticResource SharedShadow}"/>
        </Style>

        <!-- 🔥 TOOLBAR BUTTON - MODERN DESIGN 🔥 -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0D1B2A"/>
            <Setter Property="BorderBrush" Value="#1E3A52"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="{StaticResource InterSemiBold}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- 🔥 EXPORT BUTTON ACCENT 🔥 -->
        <Style x:Key="AccentToolbarButton" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
            <Setter Property="Background" Value="#00B4FF"/>
            <Setter Property="BorderBrush" Value="#0088CC"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- 🔥 IMPORT BUTTON STYLE 🔥 -->
        <Style x:Key="ImportToolbarButton" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
            <Setter Property="Background" Value="#FF9500"/>
            <Setter Property="BorderBrush" Value="#CC7700"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- 🔥 DELETE BUTTON DANGER STYLE 🔥 -->
        <Style x:Key="DangerToolbarButton" TargetType="Button" BasedOn="{StaticResource ToolbarButtonStyle}">
            <Setter Property="Background" Value="#FF3B30"/>
            <Setter Property="BorderBrush" Value="#CC2E25"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- 🔥 COMBOBOX MODERN STYLE 🔥 -->
        <Style x:Key="HistoryComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0D1B2A"/>
            <Setter Property="BorderBrush" Value="#1E3A52"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- 🔥 DATAGRID COLUMN HEADER 🔥 -->
        <Style TargetType="primitives:DataGridColumnHeader">
            <Setter Property="Background" Value="#0D1B2A"/>
            <Setter Property="Foreground" Value="#00B4FF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="{StaticResource InterBold}"/>
            <Setter Property="BorderBrush" Value="#1E3A52"/>
            <Setter Property="BorderThickness" Value="0,0,0,1.5"/>
        </Style>
    </Page.Resources>

    <Grid Padding="32,28,32,32" Background="#000D15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🔥 HEADER SECTION - ENHANCED 🔥 -->
        <Grid Grid.Row="0" Margin="0,0,0,32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="Auto" MinWidth="450"/>
            </Grid.ColumnDefinitions>

            <!-- Title Section (Left side) -->
            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="10" VerticalAlignment="Center" Margin="0,0,24,0">
                <TextBlock Text="INCIDENT HISTORY" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           CharacterSpacing="60" 
                           FontFamily="{StaticResource InterBold}"
                           TextWrapping="Wrap"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE81D;" FontSize="14" Foreground="#00B4FF" VerticalAlignment="Center"/>
                    <TextBlock Text="Comprehensive Ticket Archive &amp; Performance Analytics" 
                               FontSize="13" 
                               Foreground="#A0FFFFFF" 
                               Opacity="0.8"
                               FontFamily="{StaticResource InterRegular}"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>

            <!-- Stat Cards (Right side) -->
            <StackPanel Grid.Row="0"
                       Grid.Column="1" 
                       Orientation="Horizontal" 
                       Spacing="12"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right">
                <!-- TOTAL CARD -->
                <Border Style="{StaticResource ModernStatCard}"
                        x:Name="TotalCard"
                        PointerEntered="StatCard_PointerEntered"
                        PointerExited="StatCard_PointerExited"
                        MinWidth="130">
                    <StackPanel Spacing="6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE81D;" FontSize="12" Foreground="#00B4FF"/>
                            <TextBlock Text="TOTAL" 
                                       FontSize="10" 
                                       Foreground="#4B9CD9" 
                                       FontWeight="SemiBold" 
                                       FontFamily="{StaticResource InterBold}"/>
                        </StackPanel>
                        <TextBlock x:Name="TxtTotalCount" 
                                   Text="0" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="#00B4FF" 
                                   Margin="0,2,0,0" 
                                   FontFamily="{StaticResource InterBold}"/>
                    </StackPanel>
                </Border>

                <!-- OPEN CARD -->
                <Border Style="{StaticResource ModernStatCard}"
                        x:Name="OpenCard"
                        PointerEntered="StatCard_PointerEntered"
                        PointerExited="StatCard_PointerExited"
                        MinWidth="130">
                    <StackPanel Spacing="6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE7BA;" FontSize="12" Foreground="#FF3B30"/>
                            <TextBlock Text="OPEN" 
                                       FontSize="10" 
                                       Foreground="#E8736B" 
                                       FontWeight="SemiBold" 
                                       FontFamily="{StaticResource InterBold}"/>
                        </StackPanel>
                        <TextBlock x:Name="TxtOpenCount" 
                                   Text="0" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="#FF3B30" 
                                   Margin="0,2,0,0" 
                                   FontFamily="{StaticResource InterBold}"/>
                    </StackPanel>
                </Border>

                <!-- CLOSED CARD -->
                <Border Style="{StaticResource ModernStatCard}"
                        x:Name="ClosedCard"
                        PointerEntered="StatCard_PointerEntered"
                        PointerExited="StatCard_PointerExited"
                        MinWidth="130">
                    <StackPanel Spacing="6">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <FontIcon Glyph="&#xE73E;" FontSize="12" Foreground="#34C759"/>
                            <TextBlock Text="CLOSED" 
                                       FontSize="10" 
                                       Foreground="#6BC987" 
                                       FontWeight="SemiBold" 
                                       FontFamily="{StaticResource InterBold}"/>
                        </StackPanel>
                        <TextBlock x:Name="TxtClosedCount" 
                                   Text="0" 
                                   FontSize="22" 
                                   FontWeight="Bold" 
                                   Foreground="#34C759" 
                                   Margin="0,2,0,0" 
                                   FontFamily="{StaticResource InterBold}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- 🔥 TOOLBAR SECTION - ENHANCED 🔥 -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Row 1: Search & Filters -->
            <StackPanel Grid.Row="0" 
                       Orientation="Horizontal" 
                       Spacing="12" 
                       VerticalAlignment="Center"
                       Margin="0,0,0,12">
                <AutoSuggestBox x:Name="SearchBox" 
                               PlaceholderText="🔍 Search Ticket..." 
                               QueryIcon="Find" 
                               Width="260" 
                               VerticalAlignment="Center"
                               Background="#0D1B2A"
                               Foreground="White"
                               FontSize="13"
                               CornerRadius="10"
                               BorderThickness="1.5"
                               BorderBrush="#1E3A52"/>

                <Border Width="1.5" Height="24" Background="#1E3A52" Margin="4,0"/>

                <ComboBox x:Name="FilterStatus" 
                         PlaceholderText="Status" 
                         Width="140" 
                         VerticalAlignment="Center" 
                         SelectionChanged="FilterStatus_SelectionChanged" 
                         Style="{StaticResource HistoryComboBoxStyle}">
                    <ComboBoxItem Content="All Status" Tag="ALL" IsSelected="True"/>
                    <ComboBoxItem Content="🔥 OPEN" Tag="DOWN"/>
                    <ComboBoxItem Content="✅ CLOSED" Tag="UP"/>
                    <ComboBoxItem Content="⛔ CANCEL" Tag="CANCEL"/>
                </ComboBox>

                <ComboBox x:Name="FilterRegion" 
                         PlaceholderText="Region" 
                         Width="140" 
                         VerticalAlignment="Center" 
                         SelectionChanged="FilterRegion_SelectionChanged" 
                         Style="{StaticResource HistoryComboBoxStyle}">
                    <ComboBoxItem Content="All Regions" Tag="ALL" IsSelected="True"/>
                </ComboBox>

                <CalendarDatePicker x:Name="FilterDate" 
                                   PlaceholderText="📅 Date" 
                                   Width="140" 
                                   VerticalAlignment="Center" 
                                   DateChanged="FilterDate_DateChanged"/>
            </StackPanel>

            <!-- Row 2: Action Buttons -->
            <StackPanel Grid.Row="1" 
                       Orientation="Horizontal" 
                       Spacing="10" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right">
                <Button x:Name="BtnExport" 
                       Click="BtnExport_Click" 
                       Style="{StaticResource AccentToolbarButton}"
                       ToolTipService.ToolTip="Export data to Excel">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE896;" FontSize="14"/>
                        <TextBlock Text="EXPORT"/>
                    </StackPanel>
                </Button>

                <Button x:Name="BtnImport" 
                       Click="BtnImport_Click" 
                       Style="{StaticResource ImportToolbarButton}"
                       ToolTipService.ToolTip="Import from Excel">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE898;" FontSize="14"/>
                        <TextBlock Text="IMPORT"/>
                    </StackPanel>
                </Button>

                <Button x:Name="BtnDeleteAll" 
                       Click="BtnDeleteAll_Click" 
                       Style="{StaticResource DangerToolbarButton}"
                       ToolTipService.ToolTip="Clear database">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <FontIcon Glyph="&#xE74D;" FontSize="14"/>
                        <TextBlock Text="RESET DB"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 🔥 DATA GRID SECTION 🔥 -->
        <Grid Grid.Row="2">
            <Border Style="{StaticResource GlassCard}" Padding="0" CornerRadius="16">
                <Grid>
                    <ScrollViewer x:Name="DataGridScroller"
                                  HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                        <ui:DataGrid x:Name="HistoryDataGrid" 
                                     AutoGenerateColumns="False"
                                     IsReadOnly="True"
                                     GridLinesVisibility="Horizontal"
                                     HorizontalGridLinesBrush="#1E3A52"
                                     VerticalGridLinesBrush="Transparent"
                                     HeadersVisibility="Column"
                                     RowBackground="Transparent"
                                     AlternatingRowBackground="#0A1929"
                                     SelectionMode="Single"
                                     Sorting="HistoryDataGrid_Sorting"
                                     Padding="12,8"
                                     CornerRadius="16">

                            <ui:DataGrid.Columns>
                                <ui:DataGridTemplateColumn Header="🎫 TICKET ID" Width="140" Tag="TT_IOH">
                                    <ui:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <HyperlinkButton Content="{Binding TT_IOH}" 
                                                        Click="BtnOpenDetail_Click" 
                                                        Tag="{Binding}" 
                                                        FontWeight="Bold" 
                                                        Foreground="#00B4FF" 
                                                        FontSize="12"
                                                        Margin="6,0" 
                                                        Padding="6,6"
                                                        ToolTipService.ToolTip="Click to view ticket details"/>
                                        </DataTemplate>
                                    </ui:DataGridTemplateColumn.CellTemplate>
                                </ui:DataGridTemplateColumn>

                                <ui:DataGridTemplateColumn Header="📍 REGION" Width="110" Tag="Region">
                                    <ui:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Spacing="6" Margin="6,0" VerticalAlignment="Center">
                                                <FontIcon Glyph="&#xE81D;" FontSize="12" Foreground="#A0FFFFFF"/>
                                                <TextBlock Text="{Binding Region}" 
                                                          FontSize="12" 
                                                          Foreground="White"
                                                          FontWeight="SemiBold"
                                                          TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ui:DataGridTemplateColumn.CellTemplate>
                                </ui:DataGridTemplateColumn>

                                <ui:DataGridTemplateColumn Header="🔗 SEGMENT" Width="180" Tag="SegmentPM">
                                    <ui:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding SegmentPM}" 
                                                      FontSize="12" 
                                                      Foreground="White"
                                                      FontWeight="SemiBold"
                                                      TextTrimming="CharacterEllipsis"
                                                      Margin="6,0"
                                                      VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </ui:DataGridTemplateColumn.CellTemplate>
                                </ui:DataGridTemplateColumn>

                                <ui:DataGridTemplateColumn Header="📌 CUT POINT" Width="180" Tag="CutPoint">
                                    <ui:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding CutPoint}" 
                                                      FontSize="11" 
                                                      Foreground="#CBD5E1"
                                                      TextTrimming="CharacterEllipsis"
                                                      Margin="6,0"
                                                      VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </ui:DataGridTemplateColumn.CellTemplate>
                                </ui:DataGridTemplateColumn>

                                <ui:DataGridTemplateColumn Header="⚡ STATUS" Width="100" Tag="Status">
                                    <ui:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border Background="{Binding Status, Converter={StaticResource StatusColorConverter}}" 
                                                   CornerRadius="6" 
                                                   Padding="10,4" 
                                                   HorizontalAlignment="Left" 
                                                   VerticalAlignment="Center" 
                                                   Margin="6,0">
                                                <TextBlock Text="{Binding Status}" 
                                                          FontSize="11" 
                                                          FontWeight="Bold" 
                                                          Foreground="White" 
                                                          HorizontalAlignment="Center" 
                                                          FontFamily="{StaticResource InterBold}"/>
                                            </Border>
                                        </DataTemplate>
                                    </ui:DataGridTemplateColumn.CellTemplate>
                                </ui:DataGridTemplateColumn>

                                <ui:DataGridTemplateColumn Header="🕐 OCCURRED" Width="140" Tag="OccurTime">
                                    <ui:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding OccurTime}" 
                                                      FontSize="11" 
                                                      Foreground="#A0FFFFFF"
                                                      FontFamily="Consolas"
                                                      Margin="6,0"
                                                      VerticalAlignment="Center"
                                                      TextTrimming="CharacterEllipsis"/>
                                        </DataTemplate>
                                    </ui:DataGridTemplateColumn.CellTemplate>
                                </ui:DataGridTemplateColumn>

                                <ui:DataGridTemplateColumn Header="📋 ROOT CAUSE" Width="160" Tag="RootCause">
                                    <ui:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding RootCause}" 
                                                      FontSize="11" 
                                                      Foreground="#CBD5E1"
                                                      TextTrimming="CharacterEllipsis"
                                                      Margin="6,0"
                                                      VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </ui:DataGridTemplateColumn.CellTemplate>
                                </ui:DataGridTemplateColumn>

                                <ui:DataGridTemplateColumn Header="" Width="50">
                                    <ui:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Click="BtnDelete_Click" 
                                                   Tag="{Binding}" 
                                                   Background="Transparent" 
                                                   BorderThickness="0" 
                                                   Padding="6"
                                                   ToolTipService.ToolTip="Delete this ticket"
                                                   HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center">
                                                <FontIcon Glyph="&#xE74D;" FontSize="14" Foreground="#FF3B30" Opacity="0.7"/>
                                            </Button>
                                        </DataTemplate>
                                    </ui:DataGridTemplateColumn.CellTemplate>
                                </ui:DataGridTemplateColumn>
                            </ui:DataGrid.Columns>
                        </ui:DataGrid>
                    </ScrollViewer>

                    <!-- EMPTY STATE -->
                    <StackPanel x:Name="EmptyState" 
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center" 
                               Spacing="16" 
                               Visibility="Collapsed">
                        <FontIcon Glyph="&#xE773;" 
                                 FontSize="72" 
                                 Foreground="#2D5A7B"
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="No records found" 
                                  Foreground="#5B8DAB" 
                                  FontWeight="SemiBold" 
                                  FontSize="16" 
                                  FontFamily="{StaticResource InterBold}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Try adjusting your filters or import data to get started" 
                                  Foreground="#3A5A75" 
                                  FontSize="13" 
                                  FontFamily="{StaticResource InterRegular}"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- LOADING STATE -->
                    <Grid x:Name="LoadingOverlay" 
                         VerticalAlignment="Center" 
                         HorizontalAlignment="Center"
                         Visibility="Collapsed">
                        <StackPanel Spacing="16" HorizontalAlignment="Center">
                            <ProgressRing x:Name="LoadingRing" 
                                         IsActive="False" 
                                         Width="60" 
                                         Height="60"
                                         Foreground="#00B4FF"/>
                            <TextBlock Text="Loading data..." 
                                      Foreground="#A0FFFFFF" 
                                      FontSize="13"
                                      HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>