<Page
    x:Class="SMART_NOC.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d"
    RequestedTheme="Dark">

    <Page.Resources>
        <ThemeShadow x:Name="SharedShadow" />

        <!-- 🔥 MODERN GLASS CARD STYLE 🔥 -->
        <Style x:Key="FloatingGlassCard" TargetType="Border">
            <Setter Property="Background" Value="#0D1B2A"/>
            <Setter Property="BorderBrush" Value="#1E3A52"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24,20"/>
            <Setter Property="Shadow" Value="{StaticResource SharedShadow}"/>
        </Style>

        <!-- 🔥 KPI VALUE STYLE 🔥 -->
        <Style x:Key="KpiValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
            <Setter Property="FontFamily" Value="{StaticResource InterBold}"/>
        </Style>

        <!-- 🔥 KPI LABEL STYLE 🔥 -->
        <Style x:Key="KpiLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#4B9CD9"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CharacterSpacing" Value="50"/>
            <Setter Property="FontFamily" Value="{StaticResource InterBold}"/>
        </Style>

        <!-- 🔥 STAT BADGE STYLE 🔥 -->
        <Style x:Key="StatBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#0D1B2A"/>
            <Setter Property="BorderBrush" Value="#1E3A52"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="14,10"/>
        </Style>

        <!-- 🔥 ZOOM BUTTON STYLE 🔥 -->
        <Style x:Key="ZoomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0D1B2A"/>
            <Setter Property="BorderBrush" Value="#1E3A52"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="11,7"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- 🔥 SECTION TITLE STYLE 🔥 -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CharacterSpacing" Value="50"/>
            <Setter Property="FontFamily" Value="{StaticResource InterBold}"/>
        </Style>

        <!-- 🔥 SECTION SUBTITLE STYLE 🔥 -->
        <Style x:Key="SectionSubtitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#A0FFFFFF"/>
            <Setter Property="Opacity" Value="0.8"/>
            <Setter Property="FontFamily" Value="{StaticResource InterRegular}"/>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#000D15">
        <Grid Padding="32,28,32,32" RowSpacing="28">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="480"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 🔥 HEADER SECTION 🔥 -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="300"/>
                    <ColumnDefinition Width="Auto" MinWidth="400"/>
                </Grid.ColumnDefinitions>

                <!-- Title & Subtitle (Left side) -->
                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="10" VerticalAlignment="Center" Margin="0,0,24,0">
                    <TextBlock Text="NOC COMMAND CENTER" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               CharacterSpacing="60" 
                               FontFamily="{StaticResource InterBold}"
                               TextWrapping="Wrap"/>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE81D;" FontSize="14" Foreground="#00B4FF" VerticalAlignment="Center"/>
                        <TextBlock Text="Real-time Network Performance Monitoring &amp; Analytics" 
                                   FontSize="13" 
                                   Foreground="#A0FFFFFF" 
                                   Opacity="0.8"
                                   FontFamily="{StaticResource InterRegular}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>

                <!-- Filter Controls (Right side) -->
                <Border Grid.Row="0" 
                        Grid.Column="1"
                        Style="{StaticResource FloatingGlassCard}" 
                        Padding="14,10"
                        PointerEntered="FilterCard_PointerEntered"
                        PointerExited="FilterCard_PointerExited"
                        VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box -->
                        <AutoSuggestBox x:Name="DashboardSearchBox" 
                                       Grid.Column="0"
                                       Width="180" 
                                       PlaceholderText="🔍 Search..." 
                                       QueryIcon="Find" 
                                       VerticalAlignment="Center"
                                       Background="#000D15"
                                       Foreground="White"
                                       BorderThickness="1.5"
                                       BorderBrush="#1E3A52"
                                       CornerRadius="8"/>

                        <!-- Divider -->
                        <Border Grid.Column="1" Width="1.5" Height="24" Background="#1E3A52" Margin="10,0"/>

                        <!-- From Date -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center" Margin="0,0,10,0">
                            <TextBlock Text="From:" 
                                      VerticalAlignment="Center" 
                                      FontSize="11"
                                      Foreground="#E2E8F0"
                                      FontWeight="SemiBold"/>
                            <CalendarDatePicker x:Name="StartDatePicker" 
                                              Width="140" 
                                              DateChanged="Filter_Changed"/>
                        </StackPanel>

                        <!-- To Date -->
                        <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center" Margin="0,0,10,0">
                            <TextBlock Text="To:" 
                                      VerticalAlignment="Center" 
                                      FontSize="11"
                                      Foreground="#E2E8F0"
                                      FontWeight="SemiBold"/>
                            <CalendarDatePicker x:Name="EndDatePicker" 
                                              Width="140" 
                                              DateChanged="Filter_Changed"/>
                        </StackPanel>

                        <!-- Divider -->
                        <Border Grid.Column="4" Width="1.5" Height="20" Background="#1E3A52" Margin="8,0"/>

                        <!-- Refresh Button -->
                        <Button Grid.Column="5"
                               Click="BtnRefresh_Click" 
                               Style="{StaticResource ZoomButtonStyle}"
                               Background="#00B4FF"
                               BorderBrush="#0088CC"
                               Foreground="White"
                               ToolTipService.ToolTip="Refresh dashboard" 
                               Padding="8,6">
                            <FontIcon Glyph="&#xE72C;" FontSize="13"/>
                        </Button>
                    </Grid>
                </Border>
            </Grid>

            <!-- 🔥 KPI CARDS GRID 🔥 -->
            <Grid Grid.Row="1" ColumnSpacing="14">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- TOTAL INCIDENTS -->
                <Border Style="{StaticResource FloatingGlassCard}"
                        PointerEntered="KpiCard_PointerEntered"
                        PointerExited="KpiCard_PointerExited">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="📊 TOTAL INCIDENTS" Style="{StaticResource KpiLabelStyle}"/>
                            <TextBlock x:Name="TxtTotalIncidents" 
                                      Text="0" 
                                      Style="{StaticResource KpiValueStyle}" 
                                      Foreground="#00B4FF"/>
                            <TextBlock x:Name="TxtTotalChange" 
                                      Text="+0% from previous" 
                                      FontSize="11" 
                                      Foreground="#94A3B8" 
                                      Margin="0,6,0,0"/>
                        </StackPanel>
                        <FontIcon Glyph="&#xE9F9;" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Top" 
                                 FontSize="32" 
                                 Foreground="#00B4FF" 
                                 Opacity="0.12"/>
                    </Grid>
                </Border>

                <!-- ACTIVE/OPEN ISSUES -->
                <Border Grid.Column="1" 
                        Style="{StaticResource FloatingGlassCard}"
                        PointerEntered="KpiCard_PointerEntered"
                        PointerExited="KpiCard_PointerExited">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="🔥 ACTIVE / OPEN" Style="{StaticResource KpiLabelStyle}" Foreground="#E8736B"/>
                            <TextBlock x:Name="TxtOpenIssues" 
                                      Text="0" 
                                      Style="{StaticResource KpiValueStyle}" 
                                      Foreground="#FF3B30"/>
                            <TextBlock x:Name="TxtOpenChange" 
                                      Text="⚠️ Critical level" 
                                      FontSize="11" 
                                      Foreground="#FF3B30" 
                                      Margin="0,6,0,0" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                        <FontIcon Glyph="&#xE783;" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Top" 
                                 FontSize="32" 
                                 Foreground="#FF3B30" 
                                 Opacity="0.12"/>
                    </Grid>
                </Border>

                <!-- RESOLVED -->
                <Border Grid.Column="2" 
                        Style="{StaticResource FloatingGlassCard}"
                        PointerEntered="KpiCard_PointerEntered"
                        PointerExited="KpiCard_PointerExited">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="✅ RESOLVED" Style="{StaticResource KpiLabelStyle}" Foreground="#6BC987"/>
                            <TextBlock x:Name="TxtSolved" 
                                      Text="0" 
                                      Style="{StaticResource KpiValueStyle}" 
                                      Foreground="#34C759"/>
                            <TextBlock x:Name="TxtSolvedRate" 
                                      Text="Resolution rate" 
                                      FontSize="11" 
                                      Foreground="#94A3B8" 
                                      Margin="0,6,0,0"/>
                        </StackPanel>
                        <FontIcon Glyph="&#xE73E;" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Top" 
                                 FontSize="32" 
                                 Foreground="#34C759" 
                                 Opacity="0.12"/>
                    </Grid>
                </Border>

                <!-- AVG MTTR -->
                <Border Grid.Column="3" 
                        Style="{StaticResource FloatingGlassCard}"
                        PointerEntered="KpiCard_PointerEntered"
                        PointerExited="KpiCard_PointerExited">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="⏱️ AVG. MTTR" Style="{StaticResource KpiLabelStyle}" Foreground="#E8A361"/>
                            <TextBlock x:Name="TxtAvgMttr" 
                                      Text="0h" 
                                      Style="{StaticResource KpiValueStyle}" 
                                      Foreground="#FF9500"/>
                            <TextBlock x:Name="TxtMttrTrend" 
                                      Text="↓ Improving" 
                                      FontSize="11" 
                                      Foreground="#34C759" 
                                      Margin="0,6,0,0" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                        <FontIcon Glyph="&#xE916;" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Top" 
                                 FontSize="32" 
                                 Foreground="#FF9500" 
                                 Opacity="0.12"/>
                    </Grid>
                </Border>

                <!-- SLA COMPLIANCE -->
                <Border Grid.Column="4" 
                        Style="{StaticResource FloatingGlassCard}"
                        PointerEntered="KpiCard_PointerEntered"
                        PointerExited="KpiCard_PointerExited">
                    <Grid>
                        <StackPanel>
                            <TextBlock Text="🎯 SLA COMPLIANCE" Style="{StaticResource KpiLabelStyle}" Foreground="#A297E8"/>
                            <TextBlock x:Name="TxtSlaCompliance" 
                                      Text="100%" 
                                      Style="{StaticResource KpiValueStyle}" 
                                      Foreground="#5856D6"/>
                            <ProgressBar x:Name="ProgressSla" 
                                        Value="100" 
                                        Maximum="100" 
                                        Height="5" 
                                        Margin="0,10,0,0" 
                                        Foreground="#5856D6"
                                        Background="#1E3A52"/>
                        </StackPanel>
                        <FontIcon Glyph="&#xE826;" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Top" 
                                 FontSize="32" 
                                 Foreground="#5856D6" 
                                 Opacity="0.12"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- 🔥 QUICK STATS ROW 🔥 -->
            <Grid Grid.Row="2" ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource StatBadgeStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE71D;" Foreground="#FF3B30" FontSize="14"/>
                        <TextBlock Text="Avg Response:" VerticalAlignment="Center" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtAvgResponse" 
                                  Text="--" 
                                  FontWeight="Bold" 
                                  Foreground="#FF3B30" 
                                  VerticalAlignment="Center" 
                                  FontSize="12"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource StatBadgeStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE71E;" Foreground="#34C759" FontSize="14"/>
                        <TextBlock Text="This Month:" VerticalAlignment="Center" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtThisMonth" 
                                  Text="--" 
                                  FontWeight="Bold" 
                                  Foreground="#34C759" 
                                  VerticalAlignment="Center" 
                                  FontSize="12"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource StatBadgeStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE81D;" Foreground="#00B4FF" FontSize="14"/>
                        <TextBlock Text="Peak Hour:" VerticalAlignment="Center" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtPeakHour" 
                                  Text="--" 
                                  FontWeight="Bold" 
                                  Foreground="#00B4FF" 
                                  VerticalAlignment="Center" 
                                  FontSize="12"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource StatBadgeStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE71C;" Foreground="#FF9500" FontSize="14"/>
                        <TextBlock Text="Uptime:" VerticalAlignment="Center" FontSize="12" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtUptime" 
                                  Text="--" 
                                  FontWeight="Bold" 
                                  Foreground="#FF9500" 
                                  VerticalAlignment="Center" 
                                  FontSize="12"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 🔥 CHARTS SECTION 🔥 -->
            <Grid Grid.Row="3" ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- TREND CHART -->
                <Border Style="{StaticResource FloatingGlassCard}"
                        PointerEntered="ChartCard_PointerEntered"
                        PointerExited="ChartCard_PointerExited">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Chart Header -->
                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,10">
                            <FontIcon Glyph="&#xE9D2;" FontSize="16" Foreground="#00B4FF"/>
                            <TextBlock Text="📈 INCIDENT TREND ANALYSIS" 
                                      Style="{StaticResource KpiLabelStyle}" 
                                      Foreground="#00B4FF"
                                      Margin="0"/>
                        </StackPanel>

                        <!-- Zoom Controls -->
                        <StackPanel Grid.Row="1" 
                                   Orientation="Horizontal" 
                                   Spacing="8" 
                                   Margin="0,0,0,14">
                            <Button x:Name="BtnZoomDay" 
                                   Click="BtnZoomDay_Click" 
                                   Style="{StaticResource ZoomButtonStyle}" 
                                   Padding="10,6" 
                                   Background="#00B4FF"
                                   BorderBrush="#0088CC"
                                   Foreground="White"
                                   ToolTipService.ToolTip="View daily incidents">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE8CA;" FontSize="12"/>
                                    <TextBlock Text="Day"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="BtnZoomWeek" 
                                   Click="BtnZoomWeek_Click" 
                                   Style="{StaticResource ZoomButtonStyle}" 
                                   Padding="10,6">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE8CA;" FontSize="12"/>
                                    <TextBlock Text="Week"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="BtnZoomMonth" 
                                   Click="BtnZoomMonth_Click" 
                                   Style="{StaticResource ZoomButtonStyle}" 
                                   Padding="10,6">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE8CA;" FontSize="12"/>
                                    <TextBlock Text="Month"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="BtnZoomYear" 
                                   Click="BtnZoomYear_Click" 
                                   Style="{StaticResource ZoomButtonStyle}" 
                                   Padding="10,6">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <FontIcon Glyph="&#xE8CA;" FontSize="12"/>
                                    <TextBlock Text="Year"/>
                                </StackPanel>
                            </Button>
                            <Border Width="1.5" Height="20" Background="#1E3A52" Margin="8,0"/>
                            <TextBlock x:Name="TxtChartGranularity" 
                                      Text="Daily View" 
                                      VerticalAlignment="Center" 
                                      FontSize="12" 
                                      Foreground="#94A3B8" 
                                      FontWeight="SemiBold"
                                      Margin="4,0,0,0"/>
                        </StackPanel>

                        <!-- Chart -->
                        <lvc:CartesianChart x:Name="DashboardTrendChart" 
                                           Grid.Row="2" 
                                           Background="Transparent">
                        </lvc:CartesianChart>
                    </Grid>
                </Border>

                <!-- ROOT CAUSE PIE CHART -->
                <Border Grid.Column="1" 
                        Style="{StaticResource FloatingGlassCard}"
                        PointerEntered="ChartCard_PointerEntered"
                        PointerExited="ChartCard_PointerExited">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,16">
                            <FontIcon Glyph="&#xE809;" FontSize="16" Foreground="#F472B6"/>
                            <TextBlock Text="🎯 ROOT CAUSE" 
                                      Style="{StaticResource KpiLabelStyle}" 
                                      Foreground="#F472B6"
                                      Margin="0"/>
                        </StackPanel>

                        <lvc:PieChart x:Name="RootCauseChart" 
                                     Grid.Row="1" 
                                     Background="Transparent"
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"
                                     LegendPosition="Bottom" 
                                     LegendTextSize="11"
                                     LegendTextPaint="{Binding LegendTextPaint}">
                        </lvc:PieChart>
                    </Grid>
                </Border>
            </Grid>

            <!-- 🔥 ANALYTICS SECTION TITLE 🔥 -->
            <StackPanel Grid.Row="4" Spacing="6">
                <TextBlock Text="DETAILED ANALYTICS" 
                          Style="{StaticResource SectionTitleStyle}"/>
                <TextBlock Text="In-depth insights, trends, and performance metrics" 
                          Style="{StaticResource SectionSubtitleStyle}"/>
            </StackPanel>

            <!-- 🔥 BOTTOM ANALYTICS SECTION 🔥 -->
            <Grid Grid.Row="5" ColumnSpacing="20" Margin="0,12,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- TOP PROBLEMATIC SEGMENTS -->
                <Border Style="{StaticResource FloatingGlassCard}"
                        PointerEntered="AnalyticsCard_PointerEntered"
                        PointerExited="AnalyticsCard_PointerExited">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,16">
                            <FontIcon Glyph="&#xE7ba;" FontSize="16" Foreground="#FF3B30"/>
                            <TextBlock Text="🔴 TOP PROBLEMATIC SEGMENTS" 
                                      Style="{StaticResource KpiLabelStyle}" 
                                      Foreground="#FF3B30"
                                      Margin="0"/>
                        </StackPanel>

                        <ListView x:Name="ListTopSegments" 
                                 SelectionMode="None" 
                                 Grid.Row="1">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,14" BorderBrush="#10FFFFFF" BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="48"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="70"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Background="#FFE8E6" 
                                               CornerRadius="10" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"
                                               Padding="6">
                                            <FontIcon Glyph="&#xE1D1;" 
                                                     Foreground="#FF3B30" 
                                                     FontSize="20" 
                                                     HorizontalAlignment="Center" 
                                                     VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" 
                                                      Foreground="White" 
                                                      FontSize="13" 
                                                      TextTrimming="CharacterEllipsis" 
                                                      FontWeight="SemiBold"/>
                                            <TextBlock Text="Incidents" 
                                                      Foreground="#CBD5E1" 
                                                      FontSize="11"
                                                      Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <ProgressBar Grid.Column="2" 
                                                    Value="{Binding Count}" 
                                                    Maximum="100" 
                                                    Height="6" 
                                                    VerticalAlignment="Center" 
                                                    Foreground="#FF3B30" 
                                                    Background="#1E3A52"
                                                    Margin="8,0"/>

                                        <Border Grid.Column="3" 
                                               Background="#FFE8E6" 
                                               CornerRadius="8" 
                                               Padding="10,6" 
                                               VerticalAlignment="Center" 
                                               Margin="8,0,0,0">
                                            <TextBlock Text="{Binding Count}" 
                                                      Foreground="#FF3B30" 
                                                      FontWeight="Bold" 
                                                      FontSize="12"
                                                      HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>

                <!-- RECENT ACTIVITY LOG -->
                <Border Grid.Column="1" 
                        Style="{StaticResource FloatingGlassCard}"
                        PointerEntered="AnalyticsCard_PointerEntered"
                        PointerExited="AnalyticsCard_PointerExited">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,16">
                            <FontIcon Glyph="&#xE91C;" FontSize="16" Foreground="#34C759"/>
                            <TextBlock Text="📋 RECENT ACTIVITY LOG" 
                                      Style="{StaticResource KpiLabelStyle}" 
                                      Foreground="#6BC987"
                                      Margin="0"/>
                        </StackPanel>

                        <ListView x:Name="ListRecentActivity" 
                                 SelectionMode="None" 
                                 Grid.Row="1">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8,14" BorderBrush="#10FFFFFF" BorderThickness="0,0,0,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="110"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Timestamp}" 
                                                      Foreground="#CBD5E1" 
                                                      FontSize="11" 
                                                      FontFamily="Consolas"/>
                                            <TextBlock x:Name="StatusBadge" 
                                                      Text="{Binding Status}" 
                                                      Foreground="#A0FFFFFF" 
                                                      FontSize="10" 
                                                      Margin="0,3,0,0" 
                                                      FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="1" 
                                                  Text="{Binding Message}" 
                                                  Foreground="White" 
                                                  FontSize="13" 
                                                  TextTrimming="CharacterEllipsis" 
                                                  Margin="12,0" 
                                                  VerticalAlignment="Center"/>

                                        <FontIcon Grid.Column="2" 
                                                 Glyph="&#xE7C1;" 
                                                 FontSize="14" 
                                                 Foreground="#34C759" 
                                                 Opacity="0.6" 
                                                 VerticalAlignment="Center" 
                                                 HorizontalAlignment="Right"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>