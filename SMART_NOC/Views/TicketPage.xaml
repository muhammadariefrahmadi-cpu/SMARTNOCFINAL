<Page
    x:Class="SMART_NOC.Views.TicketPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SMART_NOC.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required"
    Background="#000D15"
    RequestedTheme="Dark">

    <Page.Resources>
        <SolidColorBrush x:Key="TabViewSelectedItemForeground" Color="#00B4FF"/>
        <SolidColorBrush x:Key="TabViewItemForeground" Color="#E2E8F0"/>
        <SolidColorBrush x:Key="TabViewBackground" Color="#0D1B2A"/>
        <SolidColorBrush x:Key="TabViewItemHeaderBackground" Color="#1A2E3E"/>
        <SolidColorBrush x:Key="TabViewItemHeaderBackgroundSelected" Color="#004080"/>

        <Style x:Key="PrimaryActionButton" TargetType="Button">
            <Setter Property="Background" Value="#00B4FF"/>
            <Setter Property="BorderBrush" Value="#0088CC"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="28,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="{StaticResource InterBold}"/>
        </Style>

        <Style x:Key="SecondaryActionButton" TargetType="Button">
            <Setter Property="Background" Value="#0D1B2A"/>
            <Setter Property="BorderBrush" Value="#1E3A52"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="28,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="{StaticResource InterBold}"/>
        </Style>

        <Style x:Key="InfoBoxBorder" TargetType="Border">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#0D1B2A"/>
            <Setter Property="BorderBrush" Value="#1E3A52"/>
            <Setter Property="BorderThickness" Value="1.5"/>
        </Style>
    </Page.Resources>

    <Grid Padding="0,1,0,0">

        <TabView x:Name="TicketTabView"
                 AddTabButtonClick="TicketTabView_AddTabButtonClick"
                 TabCloseRequested="TicketTabView_TabCloseRequested"
                 IsAddTabButtonVisible="True"
                 Visibility="Visible"
                 Margin="0,1,0,0"
                 TabWidthMode="SizeToContent"
                 Background="#000D15">
            <TabView.TabItems>
            </TabView.TabItems>
        </TabView>

        <ScrollViewer x:Name="EmptyStatePanel" 
                      Visibility="Collapsed"
                      Background="#000D15"
                      VerticalScrollBarVisibility="Auto">
            <Grid HorizontalAlignment="Center" 
                  VerticalAlignment="Center"
                  Padding="40,60,40,60"
                  MinHeight="600">

                <StackPanel Spacing="44" 
                            HorizontalAlignment="Center" 
                            MaxWidth="560">

                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Ellipse Width="180" 
                                Height="180" 
                                Fill="#00B4FF" 
                                Opacity="0.06"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>

                        <Ellipse Width="130" 
                                Height="130" 
                                Fill="#00B4FF" 
                                Opacity="0.10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>

                        <Ellipse Width="90" 
                                Height="90" 
                                Fill="#00B4FF" 
                                Opacity="0.14"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>

                        <FontIcon Glyph="&#xE7C3;" 
                                 FontSize="96" 
                                 Foreground="#00B4FF" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center" 
                                 Opacity="0.95"/>
                    </Grid>

                    <StackPanel Spacing="18" HorizontalAlignment="Center">
                        <TextBlock Text="TICKET CREATION READY"
                                   FontSize="34" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Foreground="White" 
                                   CharacterSpacing="80" 
                                   FontFamily="{StaticResource InterBold}"
                                   TextWrapping="Wrap"/>

                        <TextBlock Text="No active ticket operations at this moment"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Foreground="#E2E8F0" 
                                   Opacity="0.85" 
                                   MaxWidth="480" 
                                   TextAlignment="Center"
                                   TextWrapping="WrapWholeWords"
                                   LineHeight="26"
                                   FontWeight="SemiBold"/>

                        <TextBlock Text="Initialize a new ticket to begin managing incidents, tracking network issues, and documenting field operations in real-time"
                                   FontSize="13"
                                   HorizontalAlignment="Center"
                                   Foreground="#94A3B8" 
                                   MaxWidth="480" 
                                   TextAlignment="Center"
                                   TextWrapping="WrapWholeWords"
                                   LineHeight="22"
                                   Margin="0,6,0,0"
                                   FontFamily="{StaticResource InterRegular}"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" 
                               Spacing="14" 
                               HorizontalAlignment="Center"
                               Width="360">

                        <Button x:Name="BtnCreateNew"
                                Click="BtnCreateNew_Click"
                                Style="{StaticResource PrimaryActionButton}"
                                HorizontalAlignment="Stretch"
                                Height="56"
                                CornerRadius="12">
                            <StackPanel Orientation="Horizontal" Spacing="14">
                                <FontIcon Glyph="&#xE109;" FontSize="18"/>
                                <TextBlock Text="CREATE NEW TICKET" 
                                          FontSize="14"
                                          FontWeight="Bold"
                                          VerticalAlignment="Center"
                                          FontFamily="{StaticResource InterBold}"/>
                            </StackPanel>
                        </Button>

                        <Button Click="BtnViewHistory_Click"
                                Style="{StaticResource SecondaryActionButton}"
                                HorizontalAlignment="Stretch"
                                Height="48">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE81C;" FontSize="16"/>
                                <TextBlock Text="VIEW HISTORY" 
                                          FontSize="13"
                                          FontWeight="SemiBold"
                                          VerticalAlignment="Center"
                                          FontFamily="{StaticResource InterBold}"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <Border Style="{StaticResource InfoBoxBorder}" 
                           HorizontalAlignment="Center"
                           MaxWidth="480">
                        <StackPanel Spacing="12">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <FontIcon Glyph="&#xE946;" Foreground="#00B4FF" 
                                         FontSize="18" 
                                         VerticalAlignment="Top" 
                                         Margin="0,2,0,0"/>
                                <TextBlock Text="QUICK FEATURES" 
                                          FontSize="13" 
                                          FontWeight="Bold" 
                                          Foreground="#00B4FF" 
                                          VerticalAlignment="Top"
                                          FontFamily="{StaticResource InterBold}"/>
                            </StackPanel>

                            <StackPanel Spacing="10" Margin="0,4,0,0">
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock Text="📧" FontSize="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="Drag &amp; drop .msg files to auto-parse email data" 
                                              FontSize="12" 
                                              Foreground="#E2E8F0" 
                                              VerticalAlignment="Center"
                                              TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock Text="🤖" FontSize="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="Use AI to extract text and coordinates from images" 
                                              FontSize="12" 
                                              Foreground="#E2E8F0" 
                                              VerticalAlignment="Center"
                                              TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock Text="📋" FontSize="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="Auto-populate fields with smart segment detection" 
                                              FontSize="12" 
                                              Foreground="#E2E8F0" 
                                              VerticalAlignment="Center"
                                              TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock Text="💾" FontSize="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="Save templates for faster ticket creation" 
                                              FontSize="12" 
                                              Foreground="#E2E8F0" 
                                              VerticalAlignment="Center"
                                              TextWrapping="Wrap"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource InfoBoxBorder}" 
                           HorizontalAlignment="Center"
                           MaxWidth="480"
                           Opacity="0.7">
                        <StackPanel Spacing="10">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon Glyph="&#xE9AD;" Foreground="#FF9500" 
                                         FontSize="16" 
                                         VerticalAlignment="Top" 
                                         Margin="0,1,0,0"/>
                                <TextBlock Text="PRO TIP" 
                                          FontSize="12" 
                                          FontWeight="Bold" 
                                          Foreground="#FF9500"
                                          VerticalAlignment="Top"
                                          FontFamily="{StaticResource InterBold}"/>
                            </StackPanel>
                            <TextBlock Text="Copy your tickets to clipboard for quick backup, or paste previously saved tickets to restore data instantly" 
                                      FontSize="11" 
                                      Foreground="#A0FFFFFF" 
                                      TextWrapping="Wrap"
                                      LineHeight="18"
                                      FontFamily="{StaticResource InterRegular}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>