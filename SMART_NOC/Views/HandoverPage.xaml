<Page
    x:Class="SMART_NOC.Views.HandoverPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="📒 Shift Handover Log" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Catatan operan shift &amp; informasi penting non-tiket." Foreground="Gray"/>
        </StackPanel>

        <Grid Grid.Row="1" ColumnSpacing="10" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="TxtLogMessage" PlaceholderText="Tulis catatan (misal: Kunci site dititip di satpam...)" KeyDown="TxtLogMessage_KeyDown"/>
            
            <CheckBox x:Name="ChkUrgent" Grid.Column="1" Content="Urgent!" Foreground="Red"/>
            
            <Button Grid.Column="2" x:Name="BtnSendLog" Style="{StaticResource AccentButtonStyle}" Click="BtnSendLog_Click">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <SymbolIcon Symbol="Send"/>
                    <TextBlock Text="Catat"/>
                </StackPanel>
            </Button>
        </Grid>

        <ListView Grid.Row="2" x:Name="LvLogs" BorderThickness="1" BorderBrush="#E0E0E0" CornerRadius="8" Background="#FAFAFA">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="{Binding Timestamp}" FontSize="11" Foreground="Gray"/>
                            <TextBlock Text="[URGENT]" FontSize="10" Foreground="Red" FontWeight="Bold" Visibility="{Binding IsImportant}"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Row="1" Text="{Binding Message}" TextWrapping="Wrap" Margin="0,5,0,0" FontWeight="SemiBold"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>