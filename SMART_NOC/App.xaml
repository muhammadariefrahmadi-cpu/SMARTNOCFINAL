<Application
    x:Class="SMART_NOC.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SMART_NOC">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Modern Font Families -->
            <FontFamily x:Key="InterRegular">ms-appx:///Assets/Fonts/Inter_18pt-Regular.ttf#Inter</FontFamily>
            <FontFamily x:Key="InterSemiBold">ms-appx:///Assets/Fonts/Inter_18pt-SemiBold.ttf#Inter</FontFamily>
            <FontFamily x:Key="InterBold">ms-appx:///Assets/Fonts/Inter_18pt-Bold.ttf#Inter</FontFamily>

            <!-- Next-Gen Gradient Backgrounds -->
            <LinearGradientBrush x:Key="NeonDeepSpaceBackground" StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#0A0E27" Offset="0.0" />
                <GradientStop Color="#0F1B3C" Offset="0.3" />
                <GradientStop Color="#050812" Offset="1.0" />
            </LinearGradientBrush>

            <LinearGradientBrush x:Key="PremiumGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1F35" Offset="0.0" />
                <GradientStop Color="#151B2F" Offset="0.5" />
                <GradientStop Color="#0F1420" Offset="1.0" />
            </LinearGradientBrush>

            <!-- Modern Color Palette -->
            <SolidColorBrush x:Key="NeonRedBrush" Color="#FF3B30" />
            <SolidColorBrush x:Key="NeonGreenBrush" Color="#34C759" />
            <SolidColorBrush x:Key="NeonOrangeBrush" Color="#FF9500" />
            <SolidColorBrush x:Key="NeonBlueBrush" Color="#00B4FF" />
            <SolidColorBrush x:Key="NeonPurpleBrush" Color="#5856D6" />
            <SolidColorBrush x:Key="NeonPinkBrush" Color="#FF2D55" />

            <!-- Glass Effect Brushes -->
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#E8F3F9" />
            <SolidColorBrush x:Key="CardBorderBrush" Color="#60B4FF" />
            <SolidColorBrush x:Key="GlassCardBackground" Color="#0D1B2A" Opacity="0.7" />
            <SolidColorBrush x:Key="GlassCardBorder" Color="#30B4FF" />

            <!-- Text Colors -->
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#0F172A" />
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#64748B" />
            <SolidColorBrush x:Key="TextTertiaryBrush" Color="#94A3B8" />
            <SolidColorBrush x:Key="TextLightBrush" Color="#E2E8F0" />
            <SolidColorBrush x:Key="TextWhiteBrush" Color="#FFFFFF" />

            <!-- Accent Colors -->
            <SolidColorBrush x:Key="SuccessColor" Color="#34C759" />
            <SolidColorBrush x:Key="WarningColor" Color="#FF9500" />
            <SolidColorBrush x:Key="ErrorColor" Color="#FF3B30" />
            <SolidColorBrush x:Key="InfoColor" Color="#00B4FF" />

            <!-- Base Text Block Style -->
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource InterRegular}"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            </Style>

            <!-- Modern TextBox Style -->
            <Style TargetType="TextBox">
                <Setter Property="FontFamily" Value="{StaticResource InterRegular}"/>
                <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="PlaceholderForeground" Value="{StaticResource TextTertiaryBrush}"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Background" Value="#F5F5F5"/>
                <Setter Property="Padding" Value="12,10"/>
            </Style>

            <!-- Modern AutoSuggestBox Style -->
            <Style TargetType="AutoSuggestBox">
                <Setter Property="FontFamily" Value="{StaticResource InterRegular}"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="FontSize" Value="13"/>
            </Style>

            <!-- ?? NEW: Modern ComboBox Style -->
            <Style TargetType="ComboBox">
                <Setter Property="FontFamily" Value="{StaticResource InterRegular}"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Background" Value="#F5F5F5"/>
                <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
            </Style>

            <!-- ?? NEW: Modern DataGrid Header Style -->
            <Style TargetType="TextBlock" x:Key="DataGridHeaderStyle">
                <Setter Property="FontFamily" Value="{StaticResource InterSemiBold}"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            </Style>

            <!-- ?? NEW: Modern Progress Bar Style -->
            <Style TargetType="ProgressBar" x:Key="ModernProgressBarStyle">
                <Setter Property="Foreground" Value="{StaticResource NeonBlueBrush}"/>
                <Setter Property="Background" Value="#E0E0E0"/>
                <Setter Property="Height" Value="8"/>
                <Setter Property="CornerRadius" Value="4"/>
            </Style>

            <!-- ?? NEW: Modern Toggle Switch Style -->
            <Style TargetType="ToggleSwitch" x:Key="ModernToggleSwitchStyle">
                <Setter Property="FontFamily" Value="{StaticResource InterSemiBold}"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            </Style>

            <!-- Typography Styles -->
            <Style x:Key="PageTitleStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource InterBold}"/>
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="Margin" Value="0,0,0,4"/>
                <Setter Property="CharacterSpacing" Value="-20"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <Style x:Key="PageSubtitleStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource InterRegular}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                <Setter Property="Margin" Value="0,0,0,24"/>
            </Style>

            <Style x:Key="BigStatTextStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource InterBold}"/>
                <Setter Property="FontSize" Value="36"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="CharacterSpacing" Value="-30"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <Style x:Key="HeadingStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource InterBold}"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>

            <Style x:Key="SubHeadingStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource InterSemiBold}"/>
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>

            <!-- Modern Card Style with Glassmorphism -->
            <Style x:Key="GlassCardStyle" TargetType="Border">
                <Setter Property="Background" Value="#E8F3F9"/>
                <Setter Property="BorderBrush" Value="#60B4FF"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <ThemeShadow/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Dark Glass Card Style -->
            <Style x:Key="DarkGlassCardStyle" TargetType="Border">
                <Setter Property="Background" Value="#0D1B2A"/>
                <Setter Property="BorderBrush" Value="#30B4FF"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <ThemeShadow/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Accent Button Style (Primary) -->
            <Style x:Key="AccentButtonStyle" TargetType="Button">
                <Setter Property="FontFamily" Value="{StaticResource InterSemiBold}"/>
                <Setter Property="Background" Value="{ThemeResource SystemControlBackgroundAccentBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="BorderThickness" Value="0"/>
            </Style>

            <!-- Subtle Button Style (Secondary) -->
            <Style x:Key="SubtletyButtonStyle" TargetType="Button">
                <Setter Property="FontFamily" Value="{StaticResource InterSemiBold}"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>

            <!-- Glass Button Style (Tertiary) -->
            <Style x:Key="GlassButtonStyle" TargetType="Button">
                <Setter Property="FontFamily" Value="{StaticResource InterSemiBold}"/>
                <Setter Property="Background" Value="#E8F3F9"/>
                <Setter Property="BorderBrush" Value="#60B4FF"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="14,10"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>

            <!-- Danger Button Style (Destructive) -->
            <Style x:Key="DangerButtonStyle" TargetType="Button">
                <Setter Property="FontFamily" Value="{StaticResource InterSemiBold}"/>
                <Setter Property="Background" Value="#FFE8E6"/>
                <Setter Property="Foreground" Value="#FF3B30"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="14,10"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>

            <!-- KPI Card Styles for Dashboard -->
            <Style x:Key="KpiCardStyle" TargetType="Border">
                <Setter Property="Background" Value="#E8F3F9"/>
                <Setter Property="BorderBrush" Value="#60B4FF"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="20"/>
            </Style>

            <Style x:Key="KpiValueStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource InterBold}"/>
                <Setter Property="FontSize" Value="32"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                <Setter Property="Margin" Value="0,8,0,0"/>
            </Style>

            <Style x:Key="KpiLabelStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource InterSemiBold}"/>
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="CharacterSpacing" Value="50"/>
            </Style>

            <!-- Status Badge Styles -->
            <Style x:Key="StatusBadgeStyle" TargetType="Border">
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="10,4"/>
            </Style>

            <!-- Section Header -->
            <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource InterBold}"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                <Setter Property="CharacterSpacing" Value="50"/>
                <Setter Property="Margin" Value="0,0,0,12"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>